---

# Generic
generic:
  role: ansible-role-haproxy
  role_short: haproxy
  role_description: |
    Manage HAProxy

platforms:
  rhel7:
    ci: false
    supported: false
  centos7:
    ci: false
    supported: false
  opensuse15:
    ci: false
    supported: false
  debian10:
    ci: false
    supported: false
  ubuntu1804:
    ci: false
    supported: false
  fedora40:
    ci: false
    supported: false
  fedora41:
    ci: false
    supported: false

molecule:
  nodes:
    - name: nginx1
      groups:
        - nginx
    - name: nginx2
      groups:
        - nginx
    - name: master
      groups:
        - haproxy
        - keepalived_master
    - name: backup
      groups:
        - haproxy
        - keepalived_backup
  prepare:
    vars:
      prepare_firewall: true
      activate_epel: true
      install_python: true
  requirements:
    roles_extra:
      - deitkrachten.keepalived
      - deitkrachten.nginx
      - deitkrachten.rsyslog

ci_templates:
  # molecule.yml.j2:
  #   force: false
  converge.yml:
    force: false
